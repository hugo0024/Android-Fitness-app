<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginAndSignUp.SignUp.EmailSentScreen"
    android:background="@color/lightWhite"
    android:padding="30dp"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/login_back_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:rotation="180"
            android:src="@drawable/next_icon"
            android:onClick="back"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">


            <ImageView
                android:layout_below="@+id/success_dec"
                android:id="@+id/success_image"
                android:layout_width="95dp"
                android:layout_height="136dp"
                android:layout_gravity="center"
                android:src="@drawable/email_icon_light"
                android:layout_centerInParent="true"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="50dp"/>

            <TextView
                android:id="@+id/success_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/muli_bold"
                android:text="Email Verification"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="26sp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp" />

            <TextView
                android:layout_below="@+id/success_title"
                android:id="@+id/success_dec"
                android:layout_marginTop="3dp"
                android:layout_width="300dp"
                android:textAlignment="center"
                android:layout_height="wrap_content"
                android:fontFamily="@font/muli"
                android:text="You need to verify your email address in order to login, please check your email inbox."
                android:textSize="13sp"
                android:layout_centerInParent="true"
                android:layout_gravity="center"/>

            <Button
                android:layout_below="@id/success_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:background="@drawable/rounded_button"
                android:text="@string/login"
                android:textColor="@color/black"
                android:onClick="goToLogin"/>

        </RelativeLayout>


    </RelativeLayout>



</LinearLayout>